                        android:layout_height="23dp"
                        android:src="@drawable/star_rating_copy_3" />

                    <ImageView
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:src="@drawable/star_rating_copy_3" />


                    <CheckBox

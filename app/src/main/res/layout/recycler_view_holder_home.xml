<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="#CFCDCD"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="112dp"
           android:id="@+id/Viewholder1_imageid"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="19sp"

            android:id="@+id/Viewholder1_textNameid"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="160dp"
                        android:layout_height="55dp"

                        android:id="@+id/Viewholder1_textaddid"/>

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="20dp">

                        <TextView
                            android:layout_width="40dp"
                            android:layout_height="20dp"

                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:id="@+id/Viewholder1_textpriceid"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:text="Rs /"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="2dp"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"

                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"

                            android:id="@+id/Viewholder1_textmonthid"/>




                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="20dp"

                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="40dp"
                    android:layout_marginTop="60dp"
                    android:id="@+id/Viewholder1_textstarid"/>
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="60dp"
                    android:src="@drawable/star_rating_copy_3"/>

            </LinearLayout>










        </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>